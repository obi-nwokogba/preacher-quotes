<%- include(`../partials/header.ejs`) %>
<title>Preacher Quotes</title>
</head>




<body>
    <%- include(`../partials/navbar.ejs`) %>
    <main class="maindiv">
        <div class="leftdiv">
            <h1>Add a Quote</h1>
        </div>
        <div class="rightdiv">
        <form action="/quotes" method="POST">
            <label>Select Preacher</label>

            <select name="preacherId" class="formselect">
                <% for(let i = 0; i < preachers.length; i++){ %>
                    <option value="<%= preachers[i]._id %>">
                        <%= preachers[i].firstName %> <%= preachers[i].lastName %>
                    </option>
                    <% } %>
            </select>

            <!-- preacherID: String,
    quoteText: String,
    quoteSourceType: String,
    quoteSourceURL: String,
    quoteSourceTitle: String,
    userId: String,-->

            <label>Quote</label>
            <textarea type="text" name="quoteText" class="formtextarea"></textarea>

            <label>Source of Quote</label>

            <select name="quoteSourceType" class="formselect">
               
                    <option value="Book">Audio</option>
                    <option value="Book">Book</option>
                    <option value="Book">Internet / Web Page</option>
                    <option value="Book">Video</option>

            </select>

            <label>URL to this Quote Source</label>
            <input type="text" name="quoteSourceURL" class="formtextfield">

            <label for="email">Your User ID</label>
            <input type="text" name="userId" class="formtextfield">


            <button type="submit" class="button1">Add Quote</button>
            </form>
        </div>
    </main>

